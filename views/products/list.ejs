<div class="container mt-4">
    <a href="/product/add" class="btn btn-success">Add New Product</a>
     <h4 class="mt-3">List Products</h4>
      <table class="table">
          <thead>
            <tr>
              <th scope="col">Product Name</th>
              <th scope="col">Price</th>
              <th scope="col">Quantity</th>
              <th scope="col">Information</th>
              <th scope="col">Image</th>
              <th scope="col">Category</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
              <%
              products.map(pro=>{%>
                  <tr>
                      <th scope="row"><%= pro.name %></th>
                      <th scope="row"><%= pro.price %></th>
                      <th scope="row"><%= pro.quantity %></th>
                      <th scope="row"><%= pro.info%></th>
                      <th scope="row"><img src="<%=pro.imageSrc%>" width="50px" alt=""></th>
                      <th scope="row"><%= pro.category.name%></th>
                      <td><a href="product/edit/<%=pro._id%>" class="btn btn-secondary">Edit</a></td>
                      <td>
                        <%-include('../parts/formDelete',{url:`/product/delete/${pro._id}`})%>
                      </td>
                  </tr>
                  <%})
              %>
          </tbody>
        </table>
  </div>