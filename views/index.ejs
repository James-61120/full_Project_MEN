<div class="container"> 
    <div class="row">
        <%
        products.map(pro=>{%>
            <div class="col-sm-6 col-md-4">
                <div class="product-card">
                    <div class="img">
                        <img src="<%=pro.imageSrc%>" alt="">
                    </div>
                    <div class="content">
                        <h4><%= pro.name  %></h4>
                        <p><%= pro.price  %></p>
                        <a href="/cart" class="btn btn-primary">Add to Cart</a>
                    </div>
                </div>
            </div>
            <%})
        %>
    </div>
</div>